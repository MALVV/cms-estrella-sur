# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app_dev"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_dev
POSTGRES_PORT=5432

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PORT=6379

# Storage Configuration
# El sistema soporta tanto AWS S3 como MinIO
# Si las variables de AWS S3 están configuradas, se usará S3
# De lo contrario, se usará MinIO como fallback

# AWS S3 Configuration (opcional - usar para producción)
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_ENDPOINT=""  # Opcional: para usar endpoints personalizados (dejar vacío para AWS estándar)
AWS_S3_PUBLIC_URL=""  # Opcional: URL pública personalizada para el bucket (ej: https://cdn.tudominio.com)

# MinIO Configuration (usado si AWS S3 no está configurado)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_USE_SSL=false
MINIO_PUBLIC_URL="http://localhost:9000"
MINIO_CONSOLE_PORT=9001
MINIO_REGION="us-east-1"

# Application
NODE_ENV=development
PORT=3000
NEXTAUTH_SECRET="your-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key-here"

# Security
BCRYPT_ROUNDS=12
JWT_SECRET="your-jwt-secret-here"

# JWT Configuration
JWT_EXPIRES_IN="30d"
JWT_ALGORITHM="HS256"

# Analytics
GOOGLE_ANALYTICS_ID="your-ga-id-here"

# Maps
LEAFLET_API_KEY="your-leaflet-api-key-here"
